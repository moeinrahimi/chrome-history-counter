{
  "name": "Tab Visit Counter",
  "version": "0.1",
  "description": "keep track of how many times visited a website",
  "permissions": ["history", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/64.png",
      "128": "images/64.png"
    }
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/64.png",
    "128": "images/64.png"
  },

  "manifest_version": 2
}
